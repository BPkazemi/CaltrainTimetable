<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:background="@color/primary500">

        <Spinner
            android:id="@+id/caltrain_stations"
            style="@style/AppTheme.Padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary500"
            android:scrollbars="none" />

    </LinearLayout>


    <TextView
        style="@style/AppTheme.Divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="The soonest Northbound train arrives at:" />

    <android.support.v4.view.ViewPager
        android:id="@+id/northbound_pager"
        style="@style/AppTheme.Padding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android" />


    <TextView
        style="@style/AppTheme.Divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="The soonest Southbound train arrives at:" />

    <android.support.v4.view.ViewPager
        android:id="@+id/southbound_pager"
        style="@style/AppTheme.Padding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android" />

</LinearLayout>
